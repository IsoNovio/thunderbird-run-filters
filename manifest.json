{
    "manifest_version": 2,
    "name": "Run Filters from Context Menu",
    "description": "Adds context menu options to run all filters on the selected folder or set of messages.",
    "version": "1.0.1",
    "author": "Yinong Wang",
    "browser_specific_settings": {
        "gecko": {
            "id": "run-filters@IsoNovio",
            "strict_min_version": "128.0",
            "strict_max_version": "142.*"
        }
    },
    "icons": {
        "24": "images/icon.svg"
    },
    "permissions": [
        "menus"
    ],
    "experiment_apis": {
        "myapi": {
            "schema": "myapi/schema.json",
            "parent": {
                "scopes": ["addon_parent"],
                "paths": [["myapi"]],
                "script": "myapi/api.js"
            }
        }
    },
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    }
}
